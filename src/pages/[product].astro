---
import watchesData from "../../src/products.json"; // Import the JSON data
import { slugify } from "../../src/utils/slugify"; // Import slugify function

// Define a type for a Product
interface Product {
  productName: string;
  category: string;
  price: string;
  year?: string;
  image: string;
  description: string; // Add description to the type
}

// Implementing getStaticPaths to create dynamic routes
export async function getStaticPaths() {
  // Create paths based on the products in watchesData
  const paths = watchesData.products.map((product: Product) => ({
    params: { product: slugify(product.productName) }
  }));

  return {
    paths, // Array of paths
    fallback: false, // No fallback; if true, missing pages will be generated at runtime
  };
}

// Access the dynamic slug (product name) from URL
const { product } = Astro.params;

// Find the selected product based on the slug
const selectedProduct = watchesData.products.find(
  (p: Product) => slugify(p.productName) === product
);

if (!selectedProduct) {
  throw new Error(`Product not found: ${product}`);
}
---

<section class="flex justify-center p-4 flex-col">
  <h1 class="text-xl font-bold">{selectedProduct.productName}</h1>
  <p class="text-gray-600">Category: {selectedProduct.category}</p>
  <p class="text-gray-600">Price: ${selectedProduct.price}</p>
  {selectedProduct.year && (
    <p class="text-gray-600">Year: {selectedProduct.year}</p>
  )}
  <p class="text-gray-600">{selectedProduct.description}</p> <!-- Display description -->
  <img src={selectedProduct.image} alt={selectedProduct.productName} class="mt-4 w-full h-auto"/>
</section>
