---
import rolexData from '../../rolex.json';
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-4xl px-4 sm:px-6">
    <h1 class="text-4xl font-bold text-center mb-12">ROLEX WATCHES</h1>
    
    <div class="overflow-x-auto">
      <table class="w-full border-collapse bg-white">
        <thead>
          <tr class="bg-gray-100">
            <th class="border px-6 py-4 text-left text-sm font-semibold text-gray-900">Image</th>
            <th class="border px-6 py-4 text-left text-sm font-semibold text-gray-900">Model</th>
            <th class="border px-6 py-4 text-left text-sm font-semibold text-gray-900">Year</th>
            <th class="border px-6 py-4 text-left text-sm font-semibold text-gray-900">Price</th>
            <th class="border px-6 py-4 text-left text-sm font-semibold text-gray-900">SKU</th>
          </tr>
        </thead>
        <tbody>
          {rolexData.productsRolex.map((product, index) => (
            <tr class={index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
              <td class="border px-6 py-4">
                <img 
                  src={product.image} 
                  alt={product.productName} 
                  class="w-20 h-20 object-cover"
                />
              </td>
              <td class="border px-6 py-4 text-sm text-gray-900">{product.productName}</td>
              <td class="border px-6 py-4 text-sm text-gray-900">{product.year}</td>
              <td class="border px-6 py-4 text-sm text-gray-900">${product.price.toLocaleString()}</td>
              <td class="border px-6 py-4 text-sm text-gray-900">{product.sku}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>