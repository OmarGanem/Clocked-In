---
import { slugify } from '../../utils/slugify';
import productsData from '../../products.json';

interface Product {
  productName: string;
  category: string;
  price: string;
  image: string;
}

const products: Product[] = productsData.products;
---

<section class="flex">
  <!-- Sidebar Filter Section -->
  <aside class="w-64 p-6 bg-gray-100 border-r border-gray-300">
    <!-- Filter Buttons -->
    <div class="flex flex-col gap-4 mb-6">
      <button class="px-4 py-2 text-left text-white bg-gray-800 rounded transition duration-300 hover:bg-gray-600" data-filter="all">All</button>
      <button class="px-4 py-2 text-left text-white bg-gray-800 rounded transition duration-300 hover:bg-gray-600" data-filter="Rolex">Rolex</button>
      <button class="px-4 py-2 text-left text-white bg-gray-800 rounded transition duration-300 hover:bg-gray-600" data-filter="Richard Mille">Richard Mille</button>
      <button class="px-4 py-2 text-left text-white bg-gray-800 rounded transition duration-300 hover:bg-gray-600" data-filter="Panerai">Panerai</button>
      <!-- Add other categories here -->
    </div>

    <!-- Search Input -->
    <div id="search-container" class="mt-6">
      <input
        type="text"
        id="search-input"
        placeholder="Search product name here..."
        class="w-full px-3 py-2 mb-3 border border-gray-300 rounded"
      />
      <button id="search" class="w-full px-3 py-2 text-white bg-blue-600 rounded hover:bg-blue-500">Search</button>
    </div>
  </aside>

  <!-- Main Product Section -->
  <section class="flex-1 p-8 bg-white">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 max-w-6xl mx-auto">
      {products.map((product) => (
        <div class="border rounded-lg overflow-hidden shadow hover:shadow-lg transition-shadow duration-300" data-category={product.category} data-name={product.productName}>
          <a href={`/products/${slugify(product.productName)}`}>
            <img class="w-full h-64 object-cover transition-transform duration-300 hover:scale-105" src={product.image} alt={product.productName} />
          </a>
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-800">{product.productName}</h3>
            <p class="text-gray-600">${product.price}</p>
          </div>
        </div>
      ))}
    </div>
  </section>
</section>

<script type="module" src="/src/scripts/filter.js"></script>