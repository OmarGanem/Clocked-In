---
interface Link {
  ref: string;
  name: string;
  href: string;
}

const links: Link[] = [
  {
    ref: '',
    name: 'Home',
    href: '/',
  },
  {
    ref: '',
    name: 'Why Choose Us',
    href: '/contact',
  },
  {
    ref: '',
    name: 'Watches',
    href: '/pricing',
  },
  {
    ref: '',
    name: 'Categories',
    href: '/categories',
  },
];
---

<link rel="stylesheet" href="/src/components/home/" />
<header id="main-header" class="transition">
  <div
    class="mx-auto flex flex-col items-center justify-center px-2 py-1 sm:px-2 sm:py-1 lg:max-w-7xl lg:px-4"
  >
    <!-- Brand logo -->
    <div class="flex justify-center w-full mb-1"> <!-- Further reduced margin -->
      <a href="#" class="logo">
        <img src="/Clocked_In_Logo.svg" alt="Logo" class="responsive-logo" />
      </a>
      <style is:global>
        .responsive-logo {
          width: 40%; /* Reduced logo size */
          max-width: 250px; /* Reduced maximum width */
          height: auto;
        }
      </style>
    </div>

    <!-- Navigation Menu (closer to the logo) -->
    <nav>
      <ul class="flex space-x-4 text-black text-lg uppercase tracking-wider"> <!-- Reduced spacing between links -->
        {links.map((link) => (
          <li><a href={link.href} class="hover:underline transition">{link.name}</a></li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<script type="text/javascript">
  window.addEventListener('scroll', function () {
    var header = document.querySelector('header');
    header.classList.toggle('sticky', window.scrollY > 0);
  });
</script>

<style>
/* Body and Universal Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
}

body {
  background: #000; /* Background color */
  min-height: 200vh; /* Ensures content overflow for scrolling */
}

/* Sticky Navbar */
header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: 0.6s;
  padding: 5px 30px; /* Further reduced padding */
  z-index: 10000; /* Ensure the header stays above other content */
  background: transparent; /* Transparent when at the top */
}

/* Sticky Header: when scrolled */
header.sticky {
  padding: 3px 30px; /* Reduced padding when scrolled */
  background: #fff; /* White background when scrolled */
}

/* Logo Styling */
header .logo {
  position: relative;
  text-align: center; /* Center the logo */
}

header .logo img {
  width: 100%;
  max-width: 200px; /* Reduced max size for the logo */
}

header.sticky .logo img {
  width: 100%; /* Slightly smaller when sticky */
  max-width: 200px; /* Reduced max width */
}

/* Navigation Menu */
header ul {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 5px; /* Reduced space between logo and menu */
}

header ul li {
  list-style: none;
}

header ul li a {
  margin: 0 8px; /* Reduced spacing between menu items */
  text-decoration: none;
  color: #000; /* Black text by default */
  position: relative;
  transition: 0.6s;
}

nav a:hover {
  text-decoration: underline;
}
</style>